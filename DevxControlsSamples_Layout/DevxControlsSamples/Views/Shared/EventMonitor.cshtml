<div class="EventLogPanel">
    <div id="EventLog" style="width:520px">
    </div>
    @Html.DevExpress().Button(settings =>
    {
        settings.Name = "ClearButton";
        settings.Text = "Clear";
        
        settings.ClientSideEvents.Click = "function(s, e){ DXEventMonitor.Clear(); }";
    }).GetHtml()
</div>
@if ((bool)ViewData["ShowEventListPanel"])
{
    <div id="EventListContainer" class="EventListPanel">
        Trace Events:<br />
        @{
            string[] events = (string[])ViewData["ClientSideEvents"];
        }
        @for (int i = 0; i < events.Length; i++)
        {
            <input type="checkbox" id="EventCheck@(events[i])" checked="checked" /><label for="EventCheck@(events[i])">@(events[i].Replace("_", " "))</label><br />
        }
    </div>
}
